{
    "name": "serafim/railgun",
    "type": "library",
    "description": "GraphQL IDL server implementation",
    "license": "MIT",
    "require": {
        "php": ">=7.1",
        "psr/log": "~1.0",
        "illuminate/support": "~5.1",
        "hoa/compiler": "~3.17"
    },
    "autoload": {
        "psr-4": {
            "Railgun\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "require-dev": {
        "monolog/monolog": "~1.9",
        "webonyx/graphql-php": "~0.9.0",
        "youshido/graphql": "~1.4",
        "symfony/http-foundation": "~2.8|3.*|4.*",
        "illuminate/http": "~5.1",
        "phpunit/phpunit": "~6.1",
        "sami/sami": "~4.0",
        "brianium/paratest": "~1.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Railgun\\Tests\\": "tests"
        }
    },
    "suggest": {
        "youshido/graphql": "(~1.4) Youshido GraphQL root driver support",
        "webonyx/graphql-php": "(~0.9) Webonyx GraphQL root driver support",
        "symfony/http-foundation": "(~2.8|3.*|4.*) Symfony framework support",
        "illuminate/http": "(~5.1) Laravel (illuminate) framework support"
    },
    "scripts": {
        "docs-make": "daux --destination=../railgun-docs",
        "docs": "daux serve",
        "tests": "./vendor/bin/paratest --colors -p8"
    }
}
