# --------------------------------------------------------------------------
#   GraphQL Schema
# --------------------------------------------------------------------------

schema {
    query: QueryType
}

type QueryType {
    firstUser: User
}

# --------------------------------------------------------------------------
#   GraphQL Types
# --------------------------------------------------------------------------

type User {
    id: ID!
    login: String
    bestFriend: User
}
