interface Person {
    id: ID!
}

type User implements Person {
    id(upper: String): ID!
    login: String
    friend: User
}

type Bot implements Person {
    id: ID!
    name: String
}

#
# Schema definition here
#

type QueryType {
    user: User
    bot: Bot
}

schema {
    query: QueryType
}
