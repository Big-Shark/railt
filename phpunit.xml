<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="true"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="true">
    <testsuites>
        <testsuite name="Http Driver Tests">
            <directory suffix="TestCase.php">./tests/Http</directory>
        </testsuite>
        <testsuite name="LL(k) Compiler Tests">
            <directory suffix="TestCase.php">./tests/Compiler</directory>
        </testsuite>
        <testsuite name="Reflection Building Tests">
            <directory suffix="TestCase.php">./tests/Reflection</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">src/</directory>
        </whitelist>
    </filter>
    <php>
        <env name="APP_ENV" value="testing" />
    </php>
</phpunit>
